#
# bspwm hotkeys
#


super + Return
	termite

# Logout
super + alt + Escape
	bspc quit

# Close node
super + w
	bspc node -c

# Toggle monocole mode
super + t
	bspc desktop -l next

# Balance nodes
super + b
	bspc desktop -B

# Set node to fullscreen/pseudo-tiled mode
super + {shift + t,f,p}
	bspc node -t {tiled,fullscreen,pseudo_tiled}

# Swtich to last used node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# Swap positions with the last used node
#super + apostrophe
#	bspc node -s last


super + {o,i}
	bspc control --record-history off; \
	bspc node {older,newer} -f; \
	bspc control --record-history on

# Move node to last preselection
super + y
	bspc node -w last.manual

# Swap positions with the largest node
super + m
	bspc node -s biggest

# Focus/move node
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Select next/previous node in the tree
super + {_,shift + }c
	bspc node -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

# Focus/move to previous desktop
super + {_,shift + }bracketleft
	bspc {desktop -f prev.local,node -d prev.local -f}

# Focus/move to next desktop
super + {_,shift + }bracketright
	bspc {desktop -f next.local,node -d next.local -f}

# Focus/move to west monitor
super + {_,shift + }semicolon
	bspc {monitor -f west,node -m west && \
		bspc node -f last}

# Focus/move to east monitor
super + {_,shift + }apostrophe
	bspc {monitor -f east,node -m east && \
		bspc node -f last}

# Swap current desktop with last selected one
super + s
	bspc desktop -s last

# Preselect part of a node
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# Cancel preselection
super + ctrl + {_,shift + }x
	bspc {node -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc node -e {west -10,down +10,up -10,east +10}

super + alt + shift + {h,j,k,l}
	bspc node -e {east -10,up +10,down -10,west +10}

# Set preselection size ratio 
super + ctrl + {1-9}
	bspc node -r 0.{1-9}

# Focus desktop/move to desktop X
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

super + ctrl + alt + h
	bspc control --toggle-visibility

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + space
	dmenu-launch

super + ctrl + space
	dswitcher

XF86AudioPlay
	mpc toggle

XF86AudioPrev
	mpc prev

XF86AudioNext
	mpc next

XF86AudioRaiseVolume
	pulseaudio-ctl up

XF86AudioLowerVolume
	pulseaudio-ctl down

XF86AudioMute
    pulseaudio-ctl mute


# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
