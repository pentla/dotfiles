${if_match ${\1 \3} > 67}${color \4}${else}${if_match ${\1 \3} > 34}${color \5}${else}${color \6}${endif}${endif}${\2 \3}${color}]],
	template2 = [[
~/.config/scripts/\1]],
};

-- Set color in ranges of 0 < 33 < 66 < 100

conky.text = [[
  ${user_names}  |  \
Updates ${color #56c2d6}${execpi 600 ${template2 n_updates}}${color}    \
${alignc}\
Cpu ${template0 cpu cpugraph #f92672 #fd971f #82b414}  |  \
Disk ${template0 fs_used_perc fs_bar #f92672 #fd971f #82b414}  |  \
Mem ${template0 memperc memgraph #f92672 #fd971f #82b414}\
${alignr}\
${time %b%e %l:%M}  
]];
