background no
net_avg_samples 2
no_buffers yes
out_to_console yes
out_to_stderr no
alignment bottom_middle
own_window yes
own_window_type panel
own_window_type sticky,below
update_interval 1
uppercase no
gap_y 10
default_bar_size 20 5
minimum_size 1400 8
maximum_width 1500
font Terminus

TEXT
${image ~/wkspace-thumb.png -f 3}\
${alignr}\
Net ${wireless_essid wlp3s0} ${wireless_link_bar wlp3s0}  |   \
Cpu ${cpugraph 8,20}  |  \
Mem ${membar}  |  \
Batt ${if_match $battery_percent > 75}${color green}\
${else}${color yellow}\
${endif}${battery_bar}${color}  |  \
${time %b%e %l:%M}
